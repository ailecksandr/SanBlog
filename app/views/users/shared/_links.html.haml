- if controller_name != 'sessions'
  = link_to "Вхід", new_session_path(resource_name), class: 'user_actions'
  %br

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Реєстрація", new_registration_path(resource_name), class: 'user_actions'
  %br

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Забули свій пароль?", new_password_path(resource_name), class: 'user_actions'
  %br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Не отримали підтвердження на пошту?", new_confirmation_path(resource_name), class: 'user_actions'
  %br

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Не отримали інструкцій на розблокування?", new_unlock_path(resource_name), class: 'user_actions'
  %br

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Ввійти з #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'user_actions'
    %br
