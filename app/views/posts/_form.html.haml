= form_for @post, html: { class: "form form-horizontal post" } do |f|
  .form-group
    = f.label :title, class: 'control-label col-lg-2'
    .col-lg-9
      = f.text_field :title, class: 'form-control', required: true
    = f.error_span(:title)
  .form-group
    = f.label :description, class: 'control-label col-lg-2'
    .col-lg-9
      = f.text_area :description, class: 'form-control new-post-description', required: true
    = f.error_span(:description)
  .form-group
    .col-lg-10.col-lg-offset-2
      = f.submit 'ОК', class: 'btn btn-primary'
      = link_to 'Відмінити', posts_path, :class => 'btn btn-default'
